{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="btn-group-vertical">
                    <a href="{{ path('accountHome') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Accueil</button>
                    </a>
                    <a href="{{ path('accountInfo') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Infos Perso</button>
                    </a>
                    <a href="{{ path('LikedArt') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Articles aimés</button>

                    <a href="{{ path('LikedComs') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Articles commentés</button>
                    </a>
                </div>
            </div>

            <div class="col-8  mt-3 mb-3 text-white text-center">
                <h3 class="mt-2 text-white">Vos derniers articles liké</h3>
                {% for article in LikedArticles %}
                    <div class="bg-dark p-3 m-3">
                        <div class="text-center row mt-3">
                            <h4 class="text-center m-4 text-white">{{ article.title }}</h4>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm">
                                <p class="float-left mr-3">{{ article.user.firstname ~' ' ~ article.user.lastname }} </p>
                                <p class="float-left mr-3">{{ article.category.name }} </p>
                                <p class="float-left">{{ article.CreatedAt |date("d/m/Y") }}</p>
                                <br><br>
                                <blockquote class="blockquote text-center">
                                    {{ article.content|u.truncate(250) }}
                                    <a class="text-info" href="{{ path('article_show',{'slug':article.id}) }}"> ... Lire
                                        la suite</a>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <h3 class="mt-5">Vos derniers articles commenté</h3>
                {% for article in CommentedArticles %}
                    <div class="bg-dark p-3 m-3">
                        <div class="text-center row mt-3">
                            <h4 class="text-center m-4 text-white">{{ article.title }}</h4>
                        </div>
                        <div class="row mt-3">
                            <div class="col-sm">
                                <p class="float-left mr-3">{{ article.user.firstname ~' ' ~ article.user.lastname }} </p>
                                <p class="float-left mr-3">{{ article.category.name }} </p>
                                <p class="float-left">{{ article.CreatedAt |date("d/m/Y") }}</p>
                                <br><br>
                                <blockquote class="blockquote text-center">
                                    {{ article.content|u.truncate(250) }}
                                    <a class="text-info" href="{{ path('article_show',{'slug':article.id}) }}"> ... Lire
                                        la
                                        suite</a>
                                </blockquote>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}
