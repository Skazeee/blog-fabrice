{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="btn-group-vertical">
                    <a href="{{ path('accountAdmin') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Accueil</button>
                    </a>
                    <a href="{{ path('accountArticleAdmin') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Mes articles
                        </button>
                    </a>
                    <a href="{{ path('GestionComs') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Gestion
                            commentaire
                        </button>
                    </a>
                </div>
            </div>

            <div class="col-8  mt-3 mb-3 text-center">
                {{ form_start(form) }}
                {{ form_label(form.title,"Titre") }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}
                {{ form_label(form.summary,"Sommaire") }}
                {{ form_widget(form.summary, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}
                {{ form_label(form.content,"Contenu") }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}
                {{ form_label(form.picture,"Url de l'image") }}
                {{ form_widget(form.picture, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}
                {{ form_label(form.category,"Categorie") }}
                {{ form_widget(form.category, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}
                <button class="btn btn-lg btn-primary text-center mt-3 mb-5 w-25" type="submit">Ajouter</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
