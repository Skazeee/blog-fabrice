{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="height: 79.2vh;">
        <div class="row">
            <div class="col-4">
                <div class="btn-group-vertical">
                    <a href="{{ path('accountHome') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Accueil</button>
                    </a>
                    <a href="{{ path('accountInfo') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Infos Perso</button>
                    </a>
                    <a href="{{ path('LikedArt') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Articles aimés
                        </button>
                    </a>
                    <a href="{{ path('LikedComs') }}">
                        <button type="button" class="btn btn-primary mt-5" style="min-width: 200px">Articles commentés
                        </button>
                    </a>
                </div>
            </div>
            <div class="col-8  mt-3 mb-3 text-white text-center">
                <h3 class="mt-2 text-white">Mes infos !</h3>

                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}
                {{ form_label(form.pseudo) }}
                {{ form_widget(form.pseudo, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control','style':'margin :10px 0 10px 0'}}) }}

                <button type="submit" class="btn btn-lg btn-primary text-center mt-3 mb-5 pl-5 pr-5">Modifier</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}